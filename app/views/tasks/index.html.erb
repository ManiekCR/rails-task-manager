<div class="container p-4"><h1>My tasks</h1>

  <% @tasks.each do |task| %>
    <p><%= check_box_tag 'done', value = task.completed, task.completed %> <%= link_to task.title, task_path(task) %> - <%= link_to "Delete", task_path(task), method: :delete, data: {confirm: "Delete #{task.title}?"} %></p>
  <% end %>

  <p class="border-top pt-2"><i class="fas fa-plus"></i> <%= link_to "Add a new task", new_task_path %></p></div>
